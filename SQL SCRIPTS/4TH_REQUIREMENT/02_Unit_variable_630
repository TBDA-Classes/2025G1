SELECT
  v.name AS variable_name,
  COALESCE(u_by_name.units, u_by_pretty.units) AS unit,
  COALESCE(u_by_name.prettyname, u_by_pretty.prettyname) AS unit_label
FROM variable v
LEFT JOIN units u_by_name
       ON LOWER(u_by_name.name) = LOWER(v.name)
LEFT JOIN units u_by_pretty
       ON LOWER(u_by_pretty.prettyname) = LOWER(v.name)
WHERE v.name = 'MANDRINO_CONSUMO_VISUALIZADO';
